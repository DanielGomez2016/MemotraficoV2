                </td>
                <td class="col-md-7">@Html.TextBoxFor(i => i.Entorno.DerechoViaDistancia, new { @class = "col-md-12 form-control" })</td>
            </tr>
            <tr>
                <td class="col-md-3"><label>Amenazas Viales</label></td>
