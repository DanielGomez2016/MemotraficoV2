<div class="item form-group well col-md-12">
    <table class="table" >
        <thead>
            <tr>
                <th>Posible Amenaza</th>
                <th class="text-center">Existe</th>
                <th class="text-center">Distancia</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="col-md-3"><label>Rio(s) y/o Arroyo(s)</label></td>
                <td class="col-md-2 text-center">
                @if (Model.Entorno != null && Model.Entorno.Rio_Arrollo == true)
            {
                    <input type="checkbox" name="EntornoAmenaza" value="RioArroyo" class="js-switch" checked />
                }
                else
                {
                    <input type="checkbox" name="EntornoAmenaza" value="RioArroyo" class="js-switch"/>
                }
                </td>
                <td class="col-md-3">@Html.TextBoxFor(i => i.Entorno.Rio_ArrolloDistancia, new { @class = "col-md-12 form-control" })</td>
            </tr>
            <tr>
                <td class="col-md-3"><label>Gasolinera(s) y/o Gasera(s)</label></td>
                <td class="col-md-2 text-center">
                    @if (Model.Entorno != null && Model.Entorno.Gasolinera == true)
    {
                        <input type="checkbox" name="EntornoAmenaza" value="Gasolinera" class="js-switch" checked />
                    }
                    else
                    {
                        <input type="checkbox" name="EntornoAmenaza" value="Gasolinera" class="js-switch" />
                    }
                </td>
                <td class="col-md-7">@Html.TextBoxFor(i => i.Entorno.GasolineraDistancia, new { @class ="col-md-12 form-control" })</td>
            </tr>
            <tr>
                <td class="col-md-3"><label>Derecho de Via</label></td>
