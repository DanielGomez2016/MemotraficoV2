@model IEnumerable<MemotraficoV2.ViewModels.SolicitudesEscuelasViewModel>

@{
    ViewBag.Title = "Escuelas";
}

<div class="" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @* titulo *@
                        <h2>Solicitudes</h2>   @Html.ActionLink("Nueva Solicitud", "Registro", null, new { @class = "col-md-offset-med btn btn-primary btn-sm" })
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr class="text-center">
                                    <th>Escuela</th>
                                    <th>Director</th>
                                    <th>Localidad</th>
                                    <th># Solicitudes</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.escuela</td>
                                        <td>@item.director</td>
                                        <td>@item.localidad</td>
                                        <td class="text-center">@(item.Solicitudes > 0? "Cuenta con " + Convert.ToString(item.Solicitudes) + " solicitudes" : "No tiene solicitudes")</td>
                                        <td>
                                            @if (item.Solicitudes > 0)
                                            {
                                                <button id="idDetSolicitudes" name="idDetSolicitudes" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target=".bs-example-modal-lg" value="@item.idEscuela">Detalle de Solicitudes</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="titulo"></h4>
            </div>
            <div class="modal-body">
                <table id="datatable" class="detallesolicitudes table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Folio</th>
                            <th>Asunto</th>
                            <th>Fecha Entrega</th>
                            <th>Estatus</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <a class="btn btn-dark  btn" data-dismiss="modal">Cancelar</a>
            </div>
        </div>
    </div>
</div>
