@model MemotraficoV2.ViewModels.Validacion_Requerimientos
@{
    Layout = null;
}

<div class="item form-group well col-md-6" style="height:170px;">
    <label class="col-md-6">Predio</label>
    <label><input type="radio" class="flat col-md-6" name="CroquisPredio" value="1" checked required /> Rocoso   </label><br />
    <div class="col-md-6"></div>
    <label><input type="radio" class="flat col-md-6" name="CroquisPredio" value="2" required /> Arenoso   </label>
</div>
<div class="item form-group well col-md-6">
    <label class="col-md-6">Tipo de Suelo</label>
    <label><input type="radio" class="flat col-md-6" name="CroquisTipoSuelo" value="1" checked required /> Rocoso   </label><br />
    <div class="col-md-6"></div>
    <label><input type="radio" class="flat col-md-6" name="CroquisTipoSuelo" value="2" required /> Arenoso   </label><br />
    <div class="col-md-6"></div>
    <label><input type="radio" class="flat col-md-3" name="CroquisTipoSuelo" value="3" required /> Arsilloso </label><br />
    <div class="col-md-6"></div>
    <label><input type="radio" class="flat col-md-3" name="CroquisTipoSuelo" value="4" required /> Calichoso   </label><br />
    <div class="col-md-6"></div>
    <label><input type="radio" class="flat col-md-3" name="CroquisTipoSuelo" value="5" required /> Lamoso   </label>
</div>
<div class="col-md-12">
    <div class="col-md-12">
        @if (Model.Croquis != null) {
        <img class="col-md-offset-3 col-md-6" src="@(Url.Action("GetCroquis", "Solicitudes", Model.Croquis.IdCroquis))" alt="">
        }
        else
        {
            <img class="col-md-offset-3 col-md-6" src="~/Content/Images/mapachih.jpg" alt="">
        }
    </div>
</div>


