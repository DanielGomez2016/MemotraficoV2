@model IEnumerable<MemotraficoV2.Models.AccesoSistema>

<table id="datatable" class="datatable2 table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>Controlador</th>
            <th>Acción</th>
            <th>Descripción</th>
            <th>Permiso</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var i in Model)
            {
                var title = i.activo == true ? "Desactivar" : "Activar";
                var action = i.activo == true ? "SistemaDesactivarControlador" : "SistemaActivarControlador";
                var clase = i.activo == true ? "btn btn-sm btn-default" : "btn btn-sm btn-primary";
                <tr>
                    <td>@i.controlador</td>
                    <td>@i.accion</td>
                    <td>@i.descripcion</td>
                    <td class="pull-right">
                        <div class="btn-group" data-route="@(i.controlador + "/" + i.accion)" data-id="@(i.IdAccesoSistema)">
                            <button class="@(clase)" data-title="'+ title +'" data-url="@(Url.Action("/"))" data-action="@(action)">@title</button>
                            <button class="btn btn-sm btn-info" data-editar="editar" data-url="@(Url.Action("Editar"))">Editar</button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No se encontraron resultados</td>
            </tr>
        }   
    </tbody>
</table>