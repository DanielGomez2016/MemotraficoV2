@model IEnumerable<IdentitySample.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}

<div class="" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @* titulo *@
                        <h2>Roles</h2>   @Html.ActionLink("Nuevo Rol", "Create", null, new { @class = "col-md-offset-med btn btn-primary btn-sm" })

                        @* opciones modal cerrar encojer y opciones *@
                        @*<ul class="nav navbar-right panel_toolbox">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            @Html.ActionLink("Nuevo Usuario", "Create")
                                        </li>
                                    </ul>
                                </li>
                            </ul>*@
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatablerol" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Rol</th>
                                    <th>Descripcion</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Descripcion</td>
                                        <td>
                                            <div class="btn-group">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                                <button name="idEliminar" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target=".bs-example-modal-sm" value="@item.Id">Eliminar</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel2">Informacion de Usuario</h4>
            </div>
            <div class="modal-body">
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-primary">Editar</button>
                </div>*@
        </div>
    </div>
</div>