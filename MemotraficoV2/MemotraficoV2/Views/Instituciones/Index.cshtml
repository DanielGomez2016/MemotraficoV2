@model IEnumerable<MemotraficoV2.Models.Institucion>

@{
    ViewBag.Title = "Index";
}

<div class="" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">

            </div>

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @* titulo *@
                        <h2>Instituciones</h2>   @Html.ActionLink("Nueva Institucion", "Create", null, new { @class = "col-md-offset-med btn btn-primary btn-sm" })
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Siglas</th>
                                    <th>Titular</th>
                                    <th>Descripcion</th>
                                    <th>Telefono (Ext)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nombre</td>
                                        <td>@item.Siglas</td>
                                        <td>@item.Titular</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Telefono (@item.Ext)</td>
                                        <td>
                                            <div class="btn-group">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdInstitucion }, new { @class = "btn btn-primary btn-sm" })
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdInstitucion }, new { @class = "btn btn-danger btn-sm" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
